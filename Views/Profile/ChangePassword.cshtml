@model PawVerse.Models.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/profile.css" />
}

<div class="profile-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="profile-card">
                    <div class="user-info text-center mb-4">
                        <div class="mb-3">
                            <i class="fas fa-key text-primary" style="font-size: 3rem;"></i>
                        </div>
                        <h1 class="user-name">Đổi mật khẩu</h1>
                        <p class="user-email">
                            Vui lòng nhập mật khẩu hiện tại và mật khẩu mới của bạn
                        </p>
                    </div>
                    
                    <div class="profile-details px-4">
                        <form asp-action="ChangePassword" method="post" class="needs-validation" novalidate>
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                            
                            <div class="mb-4">
                                <label asp-for="OldPassword" class="form-label">Mật khẩu hiện tại <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    <input asp-for="OldPassword" type="password" class="form-control" required />
                                    <button class="btn btn-outline-secondary toggle-password" type="button">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="OldPassword" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="NewPassword" class="form-label">Mật khẩu mới <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                                    <input asp-for="NewPassword" type="password" class="form-control" required />
                                    <button class="btn btn-outline-secondary toggle-password" type="button">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <div class="form-text">Mật khẩu phải có ít nhất 6 ký tự, bao gồm chữ hoa, chữ thường, số và ký tự đặc biệt.</div>
                                <div class="password-strength mt-2">
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-danger" role="progressbar" style="width: 0%"></div>
                                    </div>
                                    <small class="text-muted password-strength-text">Độ mạnh mật khẩu</small>
                                </div>
                                <span asp-validation-for="NewPassword" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="ConfirmPassword" class="form-label">Xác nhận mật khẩu mới <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-check-circle"></i></span>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" required />
                                    <button class="btn btn-outline-secondary toggle-password" type="button">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                                <a asp-action="Index" class="btn btn-change-password me-2">
                                    <i class="fas fa-arrow-left me-2"></i>Quay lại
                                </a>
                                <button type="submit" class="btn btn-edit">
                                    <i class="fas fa-save me-2"></i>Đổi mật khẩu
                                </button>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Kích hoạt validation form
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();

        // Toggle password visibility
        document.querySelectorAll('.toggle-password').forEach(button => {
            button.addEventListener('click', function() {
                const input = this.parentElement.querySelector('input');
                const icon = this.querySelector('i');
                
                if (input.type === 'password') {
                    input.type = 'text';
                    icon.classList.remove('fa-eye');
                    icon.classList.add('fa-eye-slash');
                } else {
                    input.type = 'password';
                    icon.classList.remove('fa-eye-slash');
                    icon.classList.add('fa-eye');
                }
            });
        });

        // Password strength meter
        const passwordInput = document.getElementById('NewPassword');
        const strengthMeter = document.querySelector('.password-strength .progress-bar');
        const strengthText = document.querySelector('.password-strength-text');

        if (passwordInput && strengthMeter && strengthText) {
            passwordInput.addEventListener('input', function() {
                const password = this.value;
                let strength = 0;
                let text = '';
                let textClass = '';
                let width = 0;

                // Check password strength
                if (password.length === 0) {
                    text = 'Nhập mật khẩu mới';
                    textClass = 'text-muted';
                    width = 0;
                } else if (password.length < 6) {
                    text = 'Quá ngắn';
                    textClass = 'text-danger';
                    width = 20;
                } else {
                    // Check for different character types
                    const hasLower = /[a-z]/.test(password);
                    const hasUpper = /[A-Z]/.test(password);
                    const hasNumbers = /\d/.test(password);
                    // Check for special characters using a simpler approach
                    const hasSpecial = /[^a-zA-Z0-9]/.test(password);
                    
                    if (hasLower) strength++;
                    if (hasUpper) strength++;
                    if (hasNumbers) strength++;
                    if (hasSpecial) strength++;
                    
                    // Additional points for length
                    if (password.length > 8) strength++;
                    if (password.length > 12) strength++;
                    
                    // Set strength text and width
                    if (strength <= 2) {
                        text = 'Yếu';
                        textClass = 'text-danger';
                        width = 30;
                    } else if (strength <= 4) {
                        text = 'Trung bình';
                        textClass = 'text-warning';
                        width = 60;
                    } else if (strength <= 6) {
                        text = 'Mạnh';
                        textClass = 'text-success';
                        width = 90;
                    } else {
                        text = 'Rất mạnh';
                        textClass = 'text-success';
                        width = 100;
                    }
                }
                
                // Update UI
                strengthMeter.style.width = width + '%';
                strengthMeter.className = 'progress-bar ' + 
                    (width < 30 ? 'bg-danger' : width < 60 ? 'bg-warning' : 'bg-success');
                
                strengthText.textContent = text;
                strengthText.className = 'small ' + textClass;
            });
        }

        // Hiển thị thông báo lỗi nếu có
        @if (TempData["ErrorMessage"] != null)
        {
            @:toastr.error('@Html.Raw(TempData["ErrorMessage"])');
        }
    </script>
}
