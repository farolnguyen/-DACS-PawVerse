@model IEnumerable<PawVerse.Models.ViewModels.OrderHistoryViewModel>



@{
    ViewData["Title"] = "Đơn hàng của tôi";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12 order-list-container">
            <h2 class="mb-4">Đơn hàng của tôi</h2>
            
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            @if (!Model.Any())
            {
                <div class="card empty-orders">
                    <div class="card-body text-center p-5">
                        <i class="fas fa-shopping-bag fa-4x text-muted mb-4"></i>
                        <h4>Bạn chưa có đơn hàng nào</h4>
                        <p class="text-muted">Hãy mua sắm và quay lại đây để xem đơn hàng của bạn</p>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Tiếp tục mua sắm</a>
                    </div>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Mã đơn hàng</th>
                                <th>Ngày đặt</th>
                                <th>Địa chỉ giao hàng</th>
                                <th>Số điện thoại</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>#@order.OrderId</td>
                                    <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@order.ShippingAddress</td>
                                    <td>@order.PhoneNumber</td>
                                    <td>@order.TotalAmount.ToString("N0") đ</td>
                                    <td>
                                        @{ var vietnameseStatus = TranslateStatusToVietnamese(order.Status); }
                                        <span class="badge @(GetStatusBadgeClass(vietnameseStatus))">
                                            @vietnameseStatus
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> Xem
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    string TranslateStatusToVietnamese(string status)
    {
        if (string.IsNullOrEmpty(status)) return "Không xác định";
        status = status.Trim(); 

        return status.ToLowerInvariant() switch
        {
            "pending" => "Chờ xác nhận",
            "confirmed" => "Đã xác nhận",
            "processing" => "Đang xử lý", 
            "shipping" => "Đang giao hàng",
            "shipped" => "Đang giao hàng",
            "delivered" => "Đã giao hàng",
            "completed" => "Đã giao hàng", 
            "cancelled" => "Đã hủy",
            "canceled" => "Đã hủy",
            "chờ xác nhận" => "Chờ xác nhận",
            "đã xác nhận" => "Đã xác nhận",
            "đang xử lý" => "Đang xử lý",
            "đang giao hàng" => "Đang giao hàng",
            "đã giao hàng" => "Đã giao hàng",
            "đã hủy" => "Đã hủy",
            _ => status 
        };
    }

    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Chờ xác nhận" => "bg-warning text-dark",
            "Đã xác nhận" => "bg-info text-white",
            "Đang giao hàng" => "bg-primary text-white",
            "Đã giao hàng" => "bg-success text-white",
            "Đã hủy" => "bg-danger text-white",
            _ => "bg-secondary text-white"
        };
    }
}
