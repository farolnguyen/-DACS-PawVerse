@model PawVerse.Models.ViewModels.OrderConfirmationViewModel

@{
    ViewData["Title"] = "Xác nhận đơn hàng";
    
    // Helper function to format currency
    string FormatCurrency(decimal value) => value.ToString("#,##0") + "₫";
    
    // Get status badge class based on status
    string GetStatusBadgeClass(string status) => status switch
    {
        "Chờ xác nhận" => "bg-warning",
        "Đã xác nhận" => "bg-info",
        "Đang giao hàng" => "bg-primary",
        "Đã giao hàng" => "bg-success",
        "Đã hủy" => "bg-danger",
        _ => "bg-secondary"
    };
}

<div class="container py-5">
    <div class="text-center mb-5">
        <div class="mb-3">
            <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
        </div>
        <h1 class="display-5 fw-bold">Đặt hàng thành công!</h1>
        <p class="lead">Cảm ơn bạn đã đặt hàng tại PawVerse</p>
        <p>Mã đơn hàng của bạn: <strong>#@Model.IdDonHang</strong></p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="alert alert-info d-flex align-items-center" role="alert">
                <i class="bi bi-info-circle-fill me-2"></i>
                <div>
                    Bạn có thể xem chi tiết đơn hàng và theo dõi trạng thái trong mục 
                    <a asp-controller="Order" asp-action="MyOrders" class="alert-link">Đơn hàng của tôi</a> bất cứ lúc nào.
                </div>
            </div>
            
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Thông tin đơn hàng</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h6>Thông tin giao hàng</h6>
                            <p class="mb-1">@User.Identity?.Name</p>
                            <p class="mb-1">@Model.SoDienThoai</p>
                            <p class="mb-0 text-muted">@Model.DiaChiGiaoHang</p>
                        </div>
                        <div class="col-md-6">
                            <h6>Thông tin đơn hàng</h6>
                            <p class="mb-1">Mã đơn hàng: <strong>#@Model.IdDonHang</strong></p>
                            <p class="mb-1">Ngày đặt: @Model.NgayDatHang.ToString("dd/MM/yyyy HH:mm")</p>
                            <p class="mb-1">Phương thức thanh toán: @Model.PhuongThucThanhToan</p>
                            <p class="mb-0">
                                Trạng thái: 
                                <span class="badge @GetStatusBadgeClass(Model.TrangThaiDonHang)">@Model.TrangThaiDonHang</span>
                            </p>
                        </div>
                    </div>

                    <h6 class="mb-3">Chi tiết đơn hàng</h6>
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="table-light">
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th class="text-end">Đơn giá</th>
                                    <th class="text-center">Số lượng</th>
                                    <th class="text-end">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ChiTietDonHangs)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                {
                                                    <img src="@item.ImageUrl" alt="@item.TenSanPham" class="img-thumbnail me-3" style="width: 60px; height: 60px; object-fit: cover;">
                                                }
                                                <div>
                                                    <h6 class="mb-0">@item.TenSanPham</h6>
                                                    <small class="text-muted">Mã SP: @item.SanPhamId</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-end">@FormatCurrency(item.DonGia)</td>
                                        <td class="text-center">@item.SoLuong</td>
                                        <td class="text-end fw-bold">@FormatCurrency(item.ThanhTien)</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-end">Tạm tính:</td>
                                    <td class="text-end">@FormatCurrency(Model.TongTienDonHang - Model.PhiVanChuyen)</td>
                                </tr>
                                <tr>
                                    <td colspan="3" class="text-end">Phí vận chuyển:</td>
                                    <td class="text-end">@FormatCurrency(Model.PhiVanChuyen)</td>
                                </tr>
                                <tr class="table-active">
                                    <td colspan="3" class="text-end fw-bold">Tổng cộng:</td>
                                    <td class="text-end fw-bold text-primary">@FormatCurrency(Model.TongTienDonHang)</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
            
            <div class="d-flex justify-content-between">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Tiếp tục mua sắm
                </a>
                <a asp-controller="Order" asp-action="MyOrders" class="btn btn-primary">
                    <i class="bi bi-box-seam me-2"></i>Xem đơn hàng của tôi
                </a>
            </div>
        </div>
    </div>
</div>
