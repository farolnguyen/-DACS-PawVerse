@model PawVerse.Models.ViewModels.CheckoutViewModel

<div class="card mb-4">
    <div class="card-header bg-light">
        <h5 class="mb-0">Thông tin giao hàng</h5>
    </div>
    <div class="card-body">
        <form id="checkoutForm" asp-controller="Order" asp-action="Checkout" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="FullName" class="form-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <!-- Address Selection Component -->
            <partial name="_AddressSelection" for="AddressInfo" />

            <div class="mb-3">
                <label asp-for="SelectedVanChuyenId" class="form-label"></label>
                <select asp-for="SelectedVanChuyenId" asp-items="Model.AvailableVanChuyenOptions" class="form-select">
                    <option value="">-- Chọn phương thức vận chuyển --</option>
                </select>
                <span asp-validation-for="SelectedVanChuyenId" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Note" class="form-label"></label>
                <textarea asp-for="Note" class="form-control" rows="3" placeholder="Ghi chú về đơn hàng (tùy chọn)"></textarea>
            </div>

            <div class="mb-4">
                <h5>Phương thức thanh toán</h5>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="radio" asp-for="PaymentMethod" id="cod" value="COD" checked>
                    <label class="form-check-label" for="cod">
                        Thanh toán khi nhận hàng (COD)
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="PaymentMethod" id="banking" value="Chuyển khoản ngân hàng">
                    <label class="form-check-label" for="banking">
                        Chuyển khoản ngân hàng
                    </label>
                </div>
                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg" id="btnSubmitOrder">
                    Đặt hàng
                </button>
            </div>
        </form>
    </div>
</div>