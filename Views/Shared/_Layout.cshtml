        <img src="/images/headerandfooter/Logobig.png" alt="PawVerse" />
        </div>

        <!-- Navbar -->
        <nav class="nav-links">

        <!-- Home -->
        <a asp-controller="Home"
        asp-action="Index"
        class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
            Home
        </a>
        
       
        

        <!-- Product: trang liệt kê tất cả -->
        <a asp-controller="Product"
        asp-action="Index"
        class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Product" ? "active" : "")">
            Product
        </a>

        <!-- Service -->
        <a asp-controller="Home"
        asp-action="Service"
        class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Service" ? "active" : "")">
            Service
        </a>

        <!-- Blog  -->
        <a asp-controller="Home"
        asp-action="Blog"
        class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Blog" ? "active" : "")">
            Blog
        </a>
        
    </nav>


        <!-- Search -->
        <div class="search-box">
            <form id="searchForm" asp-controller="Product" asp-action="Index" method="get">
                <input type="text" name="searchTerm" id="searchInput" placeholder="Tìm kiếm sản phẩm..." />
                <button type="submit"><i class="bi bi-search"></i></button>
            </form>
        </div>

        <!-- Icons -->
        <div class="header-icons">
            <!-- Đơn hàng -->
            <div class="me-3">
                <a asp-controller="Order" asp-action="MyOrders" class="text-dark text-decoration-none">
                    <i class="bi bi-box-seam fs-5"></i> Đơn hàng
                </a>
            </div>
            
            <!-- Giỏ hàng -->
            <div class="cart me-3 position-relative">
                <a href="/Cart" class="text-dark text-decoration-none cart-link">
                    <i class="bi bi-cart fs-5"></i>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        // Ưu tiên lấy từ TempData trước, sau đó mới đến ViewData
                        var cartCount = TempData["CartItemCount"] as int? ?? 
                                      ViewData["CartItemCount"] as int? ?? 0;
                                        
                        // Lưu lại giá trị vào TempData cho các request tiếp theo
                        TempData.Keep("CartItemCount");
                        
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger cart-count" 
                              style="font-size: 0.6rem; @(cartCount > 0 ? "" : "display: none;")">
                            @cartCount
                        </span>
                    }
                    else
                    {
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger cart-count" 
                              style="font-size: 0.6rem; display: none;">
                            0
                        </span>
                    }
                </a>
            </div>           
        </div>
        @if (User.IsInRole("Admin"))
         {
        <a class="nav-item">
        <a class="nav-link" href="/Admin/Product/Index">Admin</a>  <!-- Liên kết đến trang Admin -->
        </a>
        }
        <partial name="_LoginPartial" />
    </div>
    </header>



    
