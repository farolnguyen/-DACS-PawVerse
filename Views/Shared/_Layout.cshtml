    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Biến cờ để kiểm soát việc gọi API
        let isUpdatingCart = false;
        
        // Xử lý sự kiện Enter trên thanh tìm kiếm
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            if (searchInput) {
                searchInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        document.getElementById('searchForm').submit();
                    }
                });
            }
        });

        // Cập nhật số lượng sản phẩm trong giỏ hàng khi tải trang
        $(document).ready(function() {
            // Chỉ gọi cập nhật nếu đã đăng nhập
            if ($('body').data('is-authenticated') === 'true') {
                updateCartCount();
            }
        });

        // Hàm cập nhật số lượng sản phẩm trong giỏ hàng
        function updateCartCount() {
            // Nếu đang trong quá trình cập nhật thì bỏ qua
            if (isUpdatingCart) return;
            
            isUpdatingCart = true;
            
            $.ajax({
                url: '/Cart/GetCartCount',
                type: 'GET',
                cache: false, // Không cache kết quả
                success: function(data) {
                    if (data && data.count !== undefined) {
                        updateCartBadge(data.count);
                    }
                    isUpdatingCart = false;
                },
                error: function(xhr, status, error) {
                    console.error('Lỗi khi cập nhật số lượng giỏ hàng:', error);
                    isUpdatingCart = false;
                    // Thử lại sau 2 giây nếu có lỗi
                    setTimeout(updateCartCount, 2000);
                }
            });
        }
        
        // Hàm cập nhật hiển thị badge
        function updateCartBadge(count) {
            const $cartBadge = $('.cart-count');
            if (count > 0) {
                $cartBadge.text(count).fadeIn(200);
            } else {
                $cartBadge.fadeOut(200, function() {
                    $(this).text('0');
                });
            }
        }
        
        // Tạo sự kiện toàn cục để các trang khác có thể gọi
        window.updateCartCount = updateCartCount;
        
        // Thêm sự kiện click để cập nhật lại số lượng khi quay lại từ trang khác
        $(document).on('click', '.cart-link', function(e) {
            // Nếu đang trong trang giỏ hàng thì không cần cập nhật
            if (window.location.pathname.toLowerCase() === '/cart') {
                return true;
            }
            // Cập nhật số lượng sau 500ms
            setTimeout(updateCartCount, 500);
        });
        
        // Lắng nghe sự kiện khi có thay đổi trên trang
        $(document).ajaxComplete(function() {
            // Cập nhật lại số lượng sau mỗi lần có AJAX hoàn thành
            if ($('body').data('is-authenticated') === 'true') {
                updateCartCount();
            }
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
