@model PawVerse.Models.ThuongHieu

@{
    ViewData["Title"] = "Chỉnh sửa Thương hiệu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutV2.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Brand" asp-action="Index">Quản lý Thương hiệu</a></li>
        <li class="breadcrumb-item active">Chỉnh sửa: @Model.TenThuongHieu</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-edit me-1"></i>
            Chỉnh sửa Thương hiệu
        </div>
        <div class="card-body">
            <form asp-area="Admin" asp-controller="Brand" asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="IdThuongHieu" />
                <input type="hidden" asp-for="Logo" /> 
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label asp-for="TenThuongHieu" class="form-label">Tên thương hiệu <span class="text-danger">*</span></label>
                            <input asp-for="TenThuongHieu" class="form-control" />
                            <span asp-validation-for="TenThuongHieu" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TenAlias" class="form-label"></label>
                            <input asp-for="TenAlias" class="form-control" />
                            <span asp-validation-for="TenAlias" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="MoTa" class="form-label"></label>
                            <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="MoTa" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="form-label">Logo hiện tại</label>
                            <div class="image-upload-container mb-2">
                                <div class="image-preview text-center">
                                    @if (!string.IsNullOrEmpty(Model.Logo))
                                    {
                                        <img id="logoPreviewEdit" src="@Url.Content(Model.Logo)" alt="Logo @Model.TenThuongHieu" class="img-thumbnail" style="max-height: 150px; object-fit: contain;" />
                                    }
                                    else
                                    {
                                        <img id="logoPreviewEdit" src="/images/placeholder-image.png" alt="Chưa có logo" class="img-thumbnail" style="max-height: 150px; object-fit: contain;" />
                                    }
                                </div>
                                <label for="fileUpload" class="form-label mt-2">Thay đổi logo (tùy chọn)</label>
                                <input type="file" name="fileUpload" class="form-control" id="fileUpload" accept="image/*" onchange="previewImageEdit(event)"/>
                            </div>
                             <div class="form-text">Để trống nếu không muốn thay đổi logo. Hỗ trợ: JPG, JPEG, PNG. Kích thước tối đa: 2MB</div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TrangThai" class="form-label"></label>
                            <select asp-for="TrangThai" class="form-select">
                                <option value="Hoạt động">Hoạt động</option>
                                <option value="Ngừng hoạt động">Ngừng hoạt động</option>
                            </select>
                            <span asp-validation-for="TrangThai" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mt-3 text-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Lưu thay đổi
                    </button>
                    <a asp-area="Admin" asp-controller="Brand" asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function previewImageEdit(event) {
            const preview = document.getElementById('logoPreviewEdit');
            const file = event.target.files[0];
            
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                };
                reader.readAsDataURL(file);
            } else {
                // If no file is selected, keep the current image or placeholder
                const currentLogoSrc = "@Url.Content(Model.Logo ?? string.Empty)";
                preview.src = currentLogoSrc || "/images/placeholder-image.png";
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            // Ensure the correct status is selected on page load
            var currentStatus = "@Model.TrangThai";
            var selectElement = document.querySelector('select[asp-for="TrangThai"]');
            if (selectElement && currentStatus) {
                selectElement.value = currentStatus;
            }

            // Form validation
            $('form').validate({
                rules: {
                    TenThuongHieu: {
                        required: true,
                        minlength: 2,
                        maxlength: 100
                    },
                    TenAlias: {
                        maxlength: 50
                    },
                    MoTa: {
                        maxlength: 500
                    },
                    'fileUpload': {
                        extension: 'jpg|jpeg|png',
                        filesize: 2097152 // 2MB
                    }
                },
                messages: {
                    TenThuongHieu: {
                        required: 'Vui lòng nhập tên thương hiệu.',
                        minlength: 'Tên thương hiệu phải có ít nhất 2 ký tự.',
                        maxlength: 'Tên thương hiệu không được vượt quá 100 ký tự.'
                    },
                    TenAlias: {
                        maxlength: 'Tên alias không được vượt quá 50 ký tự.'
                    },
                    MoTa: {
                        maxlength: 'Mô tả không được vượt quá 500 ký tự.'
                    },
                    'fileUpload': {
                        extension: 'Chỉ chấp nhận file ảnh (JPG, JPEG, PNG).',
                        filesize: 'Kích thước file tối đa là 2MB.'
                    }
                },
                errorElement: 'span',
                errorClass: 'text-danger d-block',
                errorPlacement: function (error, element) {
                    if (element.prop("type") === "file") {
                        error.insertAfter(element.closest('.image-upload-container').next('.form-text'));
                    } else {
                        error.insertAfter(element);
                    }
                },
                highlight: function(element, errorClass, validClass) {
                    $(element).addClass('is-invalid').removeClass('is-valid');
                },
                unhighlight: function(element, errorClass, validClass) {
                    $(element).removeClass('is-invalid').addClass('is-valid');
                }
            });

            $.validator.addMethod('filesize', function(value, element, param) {
                if (element.files.length === 0) return true; 
                return element.files[0].size <= param;
            });
        });
    </script>
}
