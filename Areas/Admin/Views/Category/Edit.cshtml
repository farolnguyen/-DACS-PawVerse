@model PawVerse.Models.DanhMuc

@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutV2.cshtml";
}

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Quản lý danh mục</a></li>
        <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa: @Model.TenDanhMuc</li>
    </ol>
</nav>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Chỉnh sửa danh mục</h6>
    </div>
    <div class="card-body">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="IdDanhMuc" />
            <input type="hidden" asp-for="HinhAnh" />
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group mb-3">
                        <label asp-for="TenDanhMuc" class="control-label">Tên danh mục <span class="text-danger">*</span></label>
                        <input asp-for="TenDanhMuc" class="form-control" />
                        <span asp-validation-for="TenDanhMuc" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="MoTa" class="control-label">Mô tả</label>
                        <textarea asp-for="MoTa" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="MoTa" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="TrangThai" class="control-label">Trạng thái</label>
                        <select asp-for="TrangThai" class="form-control">
                            <option value="Hoạt động">Hoạt động</option>
                            <option value="Ngừng hoạt động">Ngừng hoạt động</option>
                        </select>
                        <span asp-validation-for="TrangThai" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="form-group mb-3">
                        <label class="control-label">Hình ảnh đại diện</label>
                        <div class="image-upload-container mb-3">
                            <div class="image-preview mb-3 text-center">
                                @if (!string.IsNullOrEmpty(Model.HinhAnh))
                                {
                                    <img id="imagePreview" src="@Model.HinhAnh" alt="@Model.TenDanhMuc" class="img-thumbnail" style="max-height: 200px;" />
                                    <div class="form-check mt-2">
                                        <input class="form-check-input" type="checkbox" id="removeImage" name="removeImage">
                                        <label class="form-check-label" for="removeImage">
                                            Xóa ảnh
                                        </label>
                                    </div>
                                }
                                else
                                {
                                    <img id="imagePreview" src="#" alt="Preview" class="img-thumbnail d-none" style="max-height: 200px;" />
                                    <div id="noImage" class="border rounded p-5 text-center bg-light">
                                        <i class="fas fa-image fa-3x text-muted mb-2"></i>
                                        <p class="mb-0 text-muted">Chưa có hình ảnh</p>
                                    </div>
                                }
                            </div>
                            <div class="input-group">
                                <input type="file" class="form-control" id="fileUpload" name="fileUpload" accept="image/*" onchange="previewImage(this);">
                                <label class="input-group-text" for="fileUpload">Chọn ảnh mới</label>
                            </div>
                            <div class="form-text">Để trống nếu không muốn thay đổi ảnh. Hỗ trợ: JPG, JPEG, PNG. Kích thước tối đa: 2MB</div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="form-group text-end">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> Lưu thay đổi
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="fas fa-times me-1"></i> Hủy bỏ
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Preview image before upload
        function previewImage(input) {
            const preview = document.getElementById('imagePreview');
            const noImage = document.getElementById('noImage');
            const file = input.files[0];
            
            if (file) {
                const reader = new FileReader();
                
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.classList.remove('d-none');
                    if (noImage) noImage.classList.add('d-none');
                    
                    // Show the remove image checkbox
                    const removeCheckbox = document.getElementById('removeImage');
                    if (removeCheckbox) {
                        removeCheckbox.checked = false;
                    }
                };
                
                reader.readAsDataURL(file);
            }
        }
        
        // Handle remove image checkbox
        document.addEventListener('DOMContentLoaded', function() {
            const removeCheckbox = document.getElementById('removeImage');
            if (removeCheckbox) {
                removeCheckbox.addEventListener('change', function() {
                    const preview = document.getElementById('imagePreview');
                    const fileUpload = document.getElementById('fileUpload');
                    
                    if (this.checked) {
                        // Clear file input and hide preview
                        if (fileUpload) fileUpload.value = '';
                        if (preview) preview.classList.add('d-none');
                        
                        // Show the no image placeholder
                        const noImage = document.getElementById('noImage');
                        if (noImage) noImage.classList.remove('d-none');
                    } else {
                        // Restore current image
                        const currentImage = '@Model.HinhAnh';
                        if (currentImage) {
                            if (preview) {
                                preview.src = currentImage;
                                preview.classList.remove('d-none');
                            }
                            if (noImage) noImage.classList.add('d-none');
                        }
                    }
                });
            }
        });
        
        // Initialize form validation
        $(document).ready(function() {
            $('form').validate({
                rules: {
                    TenDanhMuc: {
                        required: true,
                        minlength: 3,
                        maxlength: 100
                    },
                    MoTa: {
                        maxlength: 500
                    },
                    'fileUpload': {
                        extension: 'jpg|jpeg|png',
                        filesize: 2097152 // 2MB
                    }
                },
                messages: {
                    TenDanhMuc: {
                        required: 'Vui lòng nhập tên danh mục',
                        minlength: 'Tên danh mục phải có ít nhất 3 ký tự',
                        maxlength: 'Tên danh mục không được vượt quá 100 ký tự'
                    },
                    MoTa: {
                        maxlength: 'Mô tả không được vượt quá 500 ký tự'
                    },
                    'fileUpload': {
                        extension: 'Chỉ chấp nhận file ảnh (JPG, JPEG, PNG)',
                        filesize: 'Kích thước file tối đa là 2MB'
                    }
                },
                errorElement: 'span',
                errorClass: 'text-danger',
                highlight: function(element, errorClass) {
                    $(element).addClass('is-invalid');
                },
                unhighlight: function(element, errorClass) {
                    $(element).removeClass('is-invalid');
                }
            });
            
            // Custom validation for file size
            $.validator.addMethod('filesize', function(value, element, param) {
                if (element.files.length === 0) return true; // No file is valid
                return element.files[0].size <= param;
            }, 'Kích thước file quá lớn');
            
            // Custom validation for file extension
            $.validator.addMethod('extension', function(value, element, param) {
                if (element.files.length === 0) return true; // No file is valid
                param = param.replace(/,/g, '|');
                return this.optional(element) || value.match(new RegExp('\\.(' + param + ')$', 'i'));
            }, 'Định dạng file không được hỗ trợ');
        });
    </script>
}
