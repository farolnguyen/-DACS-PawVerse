                                {
                                    <tr>
                                        <td>@order.IdDonHang</td>
                                        <td>@(order.NguoiDung?.FullName ?? "Khách vãng lai")</td>
                                        <td>@order.NgayDatHang.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@order.TongTien.ToString("N0") ₫</td>
                                        <td>
                                            @{
                                                var translatedStatus = TranslateStatusToVietnameseForAdminDashboard(order.TrangThai);
                                            }
                                            <span class="badge @GetOrderStatusBadgeClass(translatedStatus)">@translatedStatus</span>
                                        </td>
                                        <td>
