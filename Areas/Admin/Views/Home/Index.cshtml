                            <tr>
                                <th>Mã đơn</th>
                                <th>Khách hàng</th>
                                <th>Ngày đặt</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.RecentOrders != null && ((List<PawVerse.Models.DonHang>)ViewBag.RecentOrders).Any())
                            {
