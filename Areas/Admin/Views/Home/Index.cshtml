<!-- Quick Stats -->
<div class="row">
    <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Sản phẩm bán chạy</h6>
            </div>
            <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                @if (ViewBag.TopSellingProducts != null && ((List<PawVerse.ViewModels.TopSellingProductViewModel>)ViewBag.TopSellingProducts).Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var product in (List<PawVerse.ViewModels.TopSellingProductViewModel>)ViewBag.TopSellingProducts)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0 py-2">
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(product.ProductImage))
                                    {
                                        <img src="@Url.Content(product.ProductImage.Replace("\\", "/"))" alt="@product.ProductName" style="width: 40px; height: 40px; object-fit: cover; margin-right: 10px; border-radius: .25rem;" />
                                    }
                                    else
                                    {
                                        <div style="width: 40px; height: 40px; background-color: #f0f0f0; margin-right: 10px; border-radius: .25rem; display: flex; align-items: center; justify-content: center;">
                                            <i class="fas fa-image text-muted"></i>
                                        </div>
                                    }
                                    <span title="@product.ProductName" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 200px;">@product.ProductName</span>
                                </div>
                                <span class="badge bg-primary rounded-pill text-white">@product.QuantitySold</span>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-center mb-0">Chưa có dữ liệu.</p>
                }
            </div>
        </div>
    </div>
    <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-success">Khách hàng thân thiết</h6>
            </div>
            <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                @if (ViewBag.LoyalCustomers != null && ((List<PawVerse.ViewModels.LoyalCustomerViewModel>)ViewBag.LoyalCustomers).Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var customer in (List<PawVerse.ViewModels.LoyalCustomerViewModel>)ViewBag.LoyalCustomers)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0 py-2">
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(customer.AvatarUrl))
                                    {
                                        <img src="@Url.Content(customer.AvatarUrl)" alt="@customer.CustomerName" style="width: 40px; height: 40px; object-fit: cover; margin-right: 10px; border-radius: 50%;" />
                                    }
                                    else
                                    {
                                        <div style="width: 40px; height: 40px; background-color: #1cc88a; color:white; margin-right: 10px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight:bold;">
                                            @(!string.IsNullOrEmpty(customer.CustomerName) ? customer.CustomerName.Substring(0,1).ToUpper() : "?")
                                        </div>
                                    }
                                    <div>
                                        <div title="@customer.CustomerName" style="font-weight: 500; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 180px;">@customer.CustomerName</div>
                                        <small class="text-muted" title="@customer.CustomerEmail" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 180px;">@customer.CustomerEmail</small>
                                    </div>
                                </div>
                                <div class="text-end">
                                    <span class="badge bg-success rounded-pill text-white">@customer.OrderCount đơn</span>
                                    <div class="small text-muted">@customer.TotalSpent.ToString("N0") ₫</div>
                                </div>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-center mb-0">Chưa có dữ liệu.</p>
                }
            </div>
        </div>
    </div>
</div>

