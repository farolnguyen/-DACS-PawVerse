@{
    ViewData["Title"] = "Bảng điều khiển";

    string GetOrderStatusBadgeClass(string status)
    {
        return status switch
        {
            "Chờ xác nhận" => "bg-warning text-dark",
            "Đã xác nhận" => "bg-info text-dark",
            "Đang xử lý" => "bg-primary",
            "Đang giao hàng" => "bg-info",
            "Đã giao hàng" => "bg-success",
            "Hoàn thành" => "bg-success",
            "Đã hủy" => "bg-danger",
            _ => "bg-secondary",
        };
    }

    string TranslateStatusToVietnameseForAdminDashboard(string status)
    {
        if (string.IsNullOrEmpty(status)) return "Không xác định";
        return status.ToLower() switch
        {
            "pending confirmation" => "Chờ xác nhận",
            "pending" => "Chờ xác nhận",
            "confirmed" => "Đã xác nhận",
            "processing" => "Đang xử lý",
            "shipping" => "Đang giao hàng",
            "delivered" => "Đã giao hàng",
            "completed" => "Hoàn thành",
            "cancelled" => "Đã hủy",
            // Already Vietnamese or other cases
            "chờ xác nhận" => "Chờ xác nhận",
            "đã xác nhận" => "Đã xác nhận",
            "đang xử lý" => "Đang xử lý",
            "đang giao hàng" => "Đang giao hàng",
            "đã giao hàng" => "Đã giao hàng",
            "hoàn thành" => "Hoàn thành",
            "đã hủy" => "Đã hủy",
            _ => status // Return original if no specific translation
        };
    }
}

