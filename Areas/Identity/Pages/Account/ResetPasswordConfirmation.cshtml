@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Xác nhận đặt lại mật khẩu";
}

<div class="auth-container">
    <div class="auth-form text-center">
        <h1>@ViewData["Title"]</h1>
        <p>
            Mật khẩu của bạn đã được đặt lại. Vui lòng <a asp-page="./Login">nhấn vào đây để đăng nhập</a>.
        </p>
    </div>
</div>
